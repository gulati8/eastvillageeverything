<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Places - East Village Everything Admin</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    /* Desktop table styles */
    .places-table th a {
      color: inherit;
      text-decoration: none;
    }
    .places-table th a:hover {
      text-decoration: underline;
    }
    .sort-arrows {
      font-size: 0.75rem;
      margin-left: 4px;
    }
    .btn-actions {
      white-space: nowrap;
    }
    .btn-actions .btn {
      margin-right: 4px;
    }
    .btn-actions .btn:last-child {
      margin-right: 0;
    }

    /* Mobile card styles */
    .place-cards {
      display: none;
    }
    .place-card {
      background: #fff;
      border: 1px solid #dee2e6;
      border-radius: 4px;
      margin-bottom: 1rem;
    }
    .place-card table {
      margin-bottom: 0;
    }
    .place-card th {
      width: 100px;
      background-color: #f8f9fa;
      font-weight: 600;
    }
    .place-card td, .place-card th {
      padding: 0.5rem 0.75rem;
      border-color: #dee2e6;
    }

    /* Responsive breakpoint */
    @media (max-width: 768px) {
      .places-table-wrapper {
        display: none;
      }
      .place-cards {
        display: block;
      }
      .page-header {
        flex-direction: column;
        align-items: flex-start !important;
        gap: 1rem;
      }
    }
  </style>
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
    <div class="container">
      <a class="navbar-brand" href="/admin">EVE Admin</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav me-auto">
          <li class="nav-item">
            <a class="nav-link active" href="/admin/places">Places</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/admin/tags">Tags</a>
          </li>
        </ul>
        <% if (user) { %>
        <span class="navbar-text me-3"><%= user.name %></span>
        <form action="/admin/logout" method="POST" class="d-inline">
          <button type="submit" class="btn btn-outline-light btn-sm">Logout</button>
        </form>
        <% } %>
      </div>
    </div>
  </nav>

  <div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4 page-header">
      <h1>Places</h1>
      <a href="/admin/places/new" class="btn btn-success">New Place</a>
    </div>

    <%
      function sortUrl(column) {
        const newOrder = (sortBy === column && sortOrder === 'asc') ? 'desc' : 'asc';
        return '/admin/places?sort_by=' + column + '&sort_order=' + newOrder;
      }
      function sortArrows(column) {
        if (sortBy !== column) return '<span class="sort-arrows text-muted">↑ ↓</span>';
        return sortOrder === 'asc'
          ? '<span class="sort-arrows">↑ <span class="text-muted">↓</span></span>'
          : '<span class="sort-arrows"><span class="text-muted">↑</span> ↓</span>';
      }
      function formatDate(dateStr) {
        if (!dateStr) return '';
        const d = new Date(dateStr);
        const months = ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'];
        const month = months[d.getMonth()];
        const day = d.getDate().toString().padStart(2, '0');
        const year = d.getFullYear();
        let hours = d.getHours();
        const ampm = hours >= 12 ? 'pm' : 'am';
        hours = hours % 12 || 12;
        const minutes = d.getMinutes().toString().padStart(2, '0');
        return month + ' ' + day + ', ' + year + ' ' + hours + ':' + minutes + ampm;
      }
    %>

    <!-- Desktop Table View -->
    <div class="places-table-wrapper">
      <table class="table table-striped table-bordered places-table">
        <thead class="table-light">
          <tr>
            <th style="width: 120px;">Actions</th>
            <th>
              <a href="<%- sortUrl('name') %>">Name <%- sortArrows('name') %></a>
            </th>
            <th>Website</th>
            <th>
              <a href="<%- sortUrl('updated_at') %>">Updated At <%- sortArrows('updated_at') %></a>
            </th>
            <th>
              <a href="<%- sortUrl('created_at') %>">Created At <%- sortArrows('created_at') %></a>
            </th>
          </tr>
        </thead>
        <tbody>
          <% places.forEach(function(place) { %>
          <tr>
            <td class="btn-actions">
              <a href="/admin/places/<%= place.id %>/edit" class="btn btn-sm btn-success">Edit</a>
              <form action="/admin/places/<%= place.id %>/delete" method="POST" class="d-inline" onsubmit="return confirm('Delete this place?')">
                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
              </form>
            </td>
            <td><%= place.name %></td>
            <td>
              <% if (place.url) { %>
                <a href="<%= place.url %>" target="_blank"><%= place.url %></a>
              <% } %>
            </td>
            <td><%= formatDate(place.updated_at) %></td>
            <td><%= formatDate(place.created_at) %></td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </div>

    <!-- Mobile Card View -->
    <div class="place-cards">
      <% places.forEach(function(place) { %>
      <div class="place-card">
        <table class="table table-bordered">
          <tbody>
            <tr>
              <th>Actions</th>
              <td class="btn-actions">
                <a href="/admin/places/<%= place.id %>/edit" class="btn btn-sm btn-success">Edit</a>
                <form action="/admin/places/<%= place.id %>/delete" method="POST" class="d-inline" onsubmit="return confirm('Delete this place?')">
                  <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                </form>
              </td>
            </tr>
            <tr>
              <th>Name</th>
              <td><%= place.name %></td>
            </tr>
            <tr>
              <th>Website</th>
              <td>
                <% if (place.url) { %>
                  <a href="<%= place.url %>" target="_blank"><%= place.url %></a>
                <% } %>
              </td>
            </tr>
            <tr>
              <th>Updated At</th>
              <td><%= formatDate(place.updated_at) %></td>
            </tr>
            <tr>
              <th>Created At</th>
              <td><%= formatDate(place.created_at) %></td>
            </tr>
          </tbody>
        </table>
      </div>
      <% }); %>
    </div>

    <% if (places.length === 0) { %>
    <p class="text-muted">No places yet. <a href="/admin/places/new">Add one</a>.</p>
    <% } %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
