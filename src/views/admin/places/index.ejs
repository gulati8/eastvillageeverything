<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Places - East Village Everything Admin</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
    <div class="container">
      <a class="navbar-brand" href="/admin">EVE Admin</a>
      <div class="collapse navbar-collapse">
        <ul class="navbar-nav me-auto">
          <li class="nav-item">
            <a class="nav-link active" href="/admin/places">Places</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/admin/tags">Tags</a>
          </li>
        </ul>
        <% if (user) { %>
        <span class="navbar-text me-3"><%= user.name %></span>
        <form action="/admin/logout" method="POST" class="d-inline">
          <button type="submit" class="btn btn-outline-light btn-sm">Logout</button>
        </form>
        <% } %>
      </div>
    </div>
  </nav>

  <div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1>Places</h1>
      <a href="/admin/places/new" class="btn btn-primary">Add Place</a>
    </div>

    <div class="table-responsive">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>
              <a href="/admin/places?sort_by=name&sort_order=<%= sortBy === 'name' && sortOrder === 'asc' ? 'desc' : 'asc' %>" class="text-dark text-decoration-none">
                Name <%= sortBy === 'name' ? (sortOrder === 'asc' ? '▲' : '▼') : '' %>
              </a>
            </th>
            <th>Address</th>
            <th>Phone</th>
            <th>Tags</th>
            <th>
              <a href="/admin/places?sort_by=updated_at&sort_order=<%= sortBy === 'updated_at' && sortOrder === 'desc' ? 'asc' : 'desc' %>" class="text-dark text-decoration-none">
                Updated <%= sortBy === 'updated_at' ? (sortOrder === 'desc' ? '▼' : '▲') : '' %>
              </a>
            </th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% places.forEach(function(place) { %>
          <tr>
            <td>
              <% if (place.url) { %>
                <a href="<%= place.url %>" target="_blank"><%= place.name %></a>
              <% } else { %>
                <%= place.name %>
              <% } %>
            </td>
            <td><%= place.address || '' %></td>
            <td><%= place.phone ? place.phone.replace(/(\d{3})(\d{3})(\d{4})/, '($1) $2-$3') : '' %></td>
            <td><%= place.tags.join(', ') %></td>
            <td><%= new Date(place.updated_at).toLocaleDateString() %></td>
            <td>
              <a href="/admin/places/<%= place.id %>/edit" class="btn btn-sm btn-outline-primary">Edit</a>
              <form action="/admin/places/<%= place.id %>/delete" method="POST" class="d-inline" onsubmit="return confirm('Delete this place?')">
                <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
              </form>
            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </div>

    <% if (places.length === 0) { %>
    <p class="text-muted">No places yet. <a href="/admin/places/new">Add one</a>.</p>
    <% } %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
