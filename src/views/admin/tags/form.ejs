<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= tag ? 'Edit' : 'New' %> Tag - East Village Everything Admin</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
    <div class="container">
      <a class="navbar-brand" href="/admin">EVE Admin</a>
      <div class="collapse navbar-collapse">
        <ul class="navbar-nav me-auto">
          <li class="nav-item">
            <a class="nav-link" href="/admin/places">Places</a>
          </li>
          <li class="nav-item">
            <a class="nav-link active" href="/admin/tags">Tags</a>
          </li>
        </ul>
        <% if (user) { %>
        <span class="navbar-text me-3"><%= user.name %></span>
        <form action="/admin/logout" method="POST" class="d-inline">
          <button type="submit" class="btn btn-outline-light btn-sm">Logout</button>
        </form>
        <% } %>
      </div>
    </div>
  </nav>

  <div class="container">
    <h1 class="mb-4"><%= tag && tag.id ? 'Edit' : 'New' %> Tag</h1>

    <% if (errors && errors.length > 0) { %>
    <div class="alert alert-danger">
      <ul class="mb-0">
        <% errors.forEach(function(error) { %>
        <li><%= error %></li>
        <% }); %>
      </ul>
    </div>
    <% } %>

    <form method="POST" action="<%= tag && tag.id ? '/admin/tags/' + tag.id : '/admin/tags' %>">
      <div class="row">
        <div class="col-md-6">
          <div class="mb-3">
            <label for="value" class="form-label">Value (internal) *</label>
            <input type="text" class="form-control" id="value" name="value"
                   value="<%= tag ? tag.value : '' %>"
                   required
                   pattern="[a-z0-9-]+"
                   title="Lowercase letters, numbers, and hyphens only"
                   placeholder="e.g., happy-hour">
            <div class="form-text">Lowercase letters, numbers, and hyphens only. Used internally to identify the tag.</div>
          </div>

          <div class="mb-3">
            <label for="display" class="form-label">Display Name *</label>
            <input type="text" class="form-control" id="display" name="display"
                   value="<%= tag ? tag.display : '' %>"
                   required
                   placeholder="e.g., Happy Hour">
            <div class="form-text">The name shown to users on the site.</div>
          </div>

          <div class="mb-3">
            <label for="sort_order" class="form-label">Sort Order</label>
            <input type="number" class="form-control" id="sort_order" name="sort_order"
                   value="<%= tag ? tag.sort_order : 0 %>"
                   style="max-width: 120px;">
            <div class="form-text">Lower numbers appear first. Tags with the same order are sorted alphabetically.</div>
          </div>
        </div>
      </div>

      <div class="mb-3">
        <button type="submit" class="btn btn-primary"><%= tag && tag.id ? 'Update' : 'Create' %> Tag</button>
        <a href="/admin/tags" class="btn btn-secondary">Cancel</a>
      </div>
    </form>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
