<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Tags - East Village Everything Admin</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .drag-handle {
      cursor: grab;
      padding: 0.5rem;
      color: #6c757d;
    }
    .drag-handle:hover {
      color: #212529;
    }
    .drag-handle:active {
      cursor: grabbing;
    }
    .sortable-ghost {
      opacity: 0.4;
      background-color: #e3f2fd;
    }
    .sortable-chosen {
      background-color: #f8f9fa;
    }
    .btn-actions {
      white-space: nowrap;
    }
    .btn-actions .btn {
      margin-right: 4px;
    }
    .btn-actions .btn:last-child {
      margin-right: 0;
    }
    .save-indicator {
      display: none;
      color: #198754;
    }
    .save-indicator.saving {
      display: inline;
      color: #6c757d;
    }
    .save-indicator.saved {
      display: inline;
      animation: fadeOut 2s forwards;
    }
    @keyframes fadeOut {
      0% { opacity: 1; }
      70% { opacity: 1; }
      100% { opacity: 0; }
    }
    .parent-tag {
      background-color: #e7f1ff;
      font-weight: 600;
    }
    .child-tag td:first-child {
      padding-left: 2rem;
    }
    .child-tag {
      background-color: #f8f9fa;
    }
    .section-header {
      background-color: #dee2e6;
      font-weight: 600;
    }
    .section-header td {
      padding: 0.5rem 0.75rem;
    }
  </style>
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
    <div class="container">
      <a class="navbar-brand" href="/admin">EVE Admin</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav me-auto">
          <li class="nav-item">
            <a class="nav-link" href="/admin/places">Places</a>
          </li>
          <li class="nav-item">
            <a class="nav-link active" href="/admin/tags">Tags</a>
          </li>
        </ul>
        <% if (user) { %>
        <span class="navbar-text me-3"><%= user.name %></span>
        <form action="/admin/logout" method="POST" class="d-inline">
          <button type="submit" class="btn btn-outline-light btn-sm">Logout</button>
        </form>
        <% } %>
      </div>
    </div>
  </nav>

  <div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1>
        Tags
        <span class="save-indicator" id="saveIndicator">
          <small class="text-muted"></small>
        </span>
      </h1>
      <a href="/admin/tags/new" class="btn btn-success">New Tag</a>
    </div>

    <p class="text-muted mb-3">Standalone tags shown first. Tag groups (parent with children) shown below with header.</p>

    <div class="table-responsive">
      <table class="table table-bordered">
        <thead class="table-light">
          <tr>
            <th style="width: 50px;"></th>
            <th style="width: 140px;">Actions</th>
            <th>Display Name</th>
            <th>Value</th>
          </tr>
        </thead>
        <tbody id="tagsTableBody">
          <% if (standalone.length > 0) { %>
          <!-- Standalone Tags (no header) -->
          <% standalone.forEach(function(tag) { %>
          <tr data-id="<%= tag.id %>">
            <td class="drag-handle text-center">☰</td>
            <td class="btn-actions">
              <a href="/admin/tags/<%= tag.id %>/edit" class="btn btn-sm btn-success">Edit</a>
              <a href="/admin/tags/<%= tag.id %>/delete" class="btn btn-sm btn-danger">Delete</a>
            </td>
            <td><%= tag.display %></td>
            <td><code><%= tag.value %></code></td>
          </tr>
          <% }); %>
          <% } %>

          <% if (parents.length > 0) { %>
          <!-- Tag Groups -->
          <tr class="section-header">
            <td colspan="4">Tag Groups</td>
          </tr>
          <% parents.forEach(function(parent) { %>
          <tr class="parent-tag" data-id="<%= parent.id %>">
            <td class="drag-handle text-center">☰</td>
            <td class="btn-actions">
              <a href="/admin/tags/<%= parent.id %>/edit" class="btn btn-sm btn-success">Edit</a>
              <a href="/admin/tags/<%= parent.id %>/delete" class="btn btn-sm btn-danger">Delete</a>
            </td>
            <td><%= parent.display %></td>
            <td><code><%= parent.value %></code></td>
          </tr>
          <% parent.children.forEach(function(child) { %>
          <tr class="child-tag" data-id="<%= child.id %>" data-parent="<%= parent.id %>">
            <td class="drag-handle text-center">↳</td>
            <td class="btn-actions">
              <a href="/admin/tags/<%= child.id %>/edit" class="btn btn-sm btn-success">Edit</a>
              <a href="/admin/tags/<%= child.id %>/delete" class="btn btn-sm btn-danger">Delete</a>
            </td>
            <td><%= child.display %></td>
            <td><code><%= child.value %></code></td>
          </tr>
          <% }); %>
          <% }); %>
          <% } %>
        </tbody>
      </table>
    </div>

    <% if (parents.length === 0 && standalone.length === 0) { %>
    <p class="text-muted">No tags yet. <a href="/admin/tags/new">Add one</a>.</p>
    <% } %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sortablejs@1.15.0/Sortable.min.js"></script>
  <script>
    const saveIndicator = document.getElementById('saveIndicator');

    function showSaving() {
      saveIndicator.querySelector('small').textContent = 'Saving...';
      saveIndicator.className = 'save-indicator saving';
    }

    function showSaved() {
      saveIndicator.querySelector('small').textContent = 'Saved!';
      saveIndicator.className = 'save-indicator saved';
    }

    async function updateTagOrder(tagId, newOrder) {
      try {
        const response = await fetch(`/admin/api/tags/${tagId}`, {
          method: 'PATCH',
          headers: {
            'Content-Type': 'application/json',
          },
          credentials: 'same-origin',
          body: JSON.stringify({ sort_order: newOrder })
        });
        if (!response.ok) {
          throw new Error('Failed to update tag order');
        }
        return true;
      } catch (error) {
        console.error('Error updating tag order:', error);
        return false;
      }
    }

    async function handleReorder(evt) {
      showSaving();

      // Get all rows in their new order (excluding section headers)
      const rows = evt.to.querySelectorAll('tr[data-id]');
      const updates = [];

      rows.forEach((row, index) => {
        const tagId = row.dataset.id;
        updates.push(updateTagOrder(tagId, index + 1));
      });

      await Promise.all(updates);
      showSaved();
    }

    // Initialize Sortable for the table
    const tableBody = document.getElementById('tagsTableBody');
    if (tableBody) {
      new Sortable(tableBody, {
        animation: 150,
        handle: '.drag-handle',
        ghostClass: 'sortable-ghost',
        chosenClass: 'sortable-chosen',
        filter: '.section-header',
        onEnd: handleReorder
      });
    }
  </script>
</body>
</html>
