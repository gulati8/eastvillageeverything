<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Tags - East Village Everything Admin</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
    <div class="container">
      <a class="navbar-brand" href="/admin">EVE Admin</a>
      <div class="collapse navbar-collapse">
        <ul class="navbar-nav me-auto">
          <li class="nav-item">
            <a class="nav-link" href="/admin/places">Places</a>
          </li>
          <li class="nav-item">
            <a class="nav-link active" href="/admin/tags">Tags</a>
          </li>
        </ul>
        <% if (user) { %>
        <span class="navbar-text me-3"><%= user.name %></span>
        <form action="/admin/logout" method="POST" class="d-inline">
          <button type="submit" class="btn btn-outline-light btn-sm">Logout</button>
        </form>
        <% } %>
      </div>
    </div>
  </nav>

  <div class="container">
    <h1 class="mb-4">Tags</h1>

    <% if (errors && errors.length > 0) { %>
    <div class="alert alert-danger">
      <ul class="mb-0">
        <% errors.forEach(function(error) { %>
        <li><%= error %></li>
        <% }); %>
      </ul>
    </div>
    <% } %>

    <form method="POST" action="/admin/tags">
      <p class="text-muted">Edit existing tags or add new ones. Leave rows blank to delete a tag.</p>

      <table class="table table-bordered">
        <thead>
          <tr>
            <th style="width: 100px;">Order</th>
            <th>Value (internal)</th>
            <th>Display Name</th>
          </tr>
        </thead>
        <tbody>
          <% tags.forEach(function(tag) { %>
          <tr>
            <td>
              <input type="number" class="form-control" name="order" value="<%= tag.sort_order %>">
            </td>
            <td>
              <input type="text" class="form-control" name="value" value="<%= tag.value %>" pattern="[a-z0-9-]+" title="Lowercase letters, numbers, and hyphens only">
            </td>
            <td>
              <input type="text" class="form-control" name="display" value="<%= tag.display %>">
            </td>
          </tr>
          <% }); %>
          <!-- Empty rows for new tags -->
          <% for (var i = 0; i < 5; i++) { %>
          <tr>
            <td>
              <input type="number" class="form-control" name="order" value="">
            </td>
            <td>
              <input type="text" class="form-control" name="value" value="" pattern="[a-z0-9-]+" title="Lowercase letters, numbers, and hyphens only" placeholder="e.g., happy-hour">
            </td>
            <td>
              <input type="text" class="form-control" name="display" value="" placeholder="e.g., Happy Hour">
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>

      <button type="submit" class="btn btn-primary">Save All Tags</button>
    </form>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
